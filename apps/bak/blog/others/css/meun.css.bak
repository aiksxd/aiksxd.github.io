.topdiv{
	z-index:100;
	width:100%;
	position: fixed;
	font-size: 50px;
	font-weight: bold;
    text-shadow: 5px 5px 1px #9d9d9d;
}
div
{
    animation: ani 5s;
    -webkit-animation: ani 5s; /* Safari 与 Chrome */
}
ul.top
{
	list-style-type:none;
	margin: -8;
	padding: -8;
	height: 60px;
	z-index:101;
	background-image: linear-gradient( #96CA00,#d4fc79);
}
/*C5DF56中绿，96CA00中深绿，F2F7F3淡绿，#d4fc79浅绿*/
li.meun{
	float:right;
}
li.meun a
{
  display:block;
  width:120px;
  text-align: center;
  text-decoration: none;
  transition:background-color,color 1s;
  -webkit-transition:background-color,color 1s;
}
li.meun a:link {color:#ffffff;} /* 未访问链接*/
li.meun a:visited {color:#ffffff;} /* 已访问链接 */
li.meun a:hover {color:#B2FF59;}
li.active {color:#B2FF59}
/*C5DF56中绿，96CA00中深绿，F2F7F3淡绿，#d4fc79浅绿*/
ul.menu{
    margin:0;
    padding:10px;
    top:0;
    height:80px;
	width:100%;
    position: fixed;
	font-size: 40px;
	font-weight: bold;
    text-shadow: 5px 5px 1px #9d9d9d;
    background-image: linear-gradient( #96CA00,#d4fc79);
}
li.menu{
	float:right;
	width:120px;
	list-style-type:none;
	text-align: center;
	z-index:101;
}
li.menu a
{
  text-decoration: none;
  transition:background-color,color 1s;
  -webkit-transition:background-color,color 1s;
}
li.menu a:link {color:#ffffff;} /* 未访问链接*/
li.menu a:visited {color:#ffffff;} /* 已访问链接 */
li.menu a:hover {color:#B2FF59;}
li.active {color:#B2FF59;}




        .topbar {
            height: 40px;
            width: 100%;
            position: fixed;
            z-index: 1;
            top: 0; 
            background-color: #d4fc79;
            background-image: linear-gradient(to right, #96CA00,#d4fc79);
            overflow-y: hidden;
            transition: 0.5s;
            /*padding-top: 10px;*/
            white-space: nowrap;
        }
        
        .topbar a {
            float:left;
            padding: 4px 4px 4px 4px;
            text-decoration: none;
            font-size: 20px;
            color: #818181;
            display: block;
            transition: 0.3s;
        }
        
        .topbar a:hover {
            color: #f1f1f1;
        }
        
        .topbar .closebtn {
            position: absolute;
            top: 0;
            /*bottom: 25px;*/
            font-size: 10px;
        }
        
        .material-icons,
        .icon-text {
            vertical-align: left;
        }
        
        .material-icons {
            margin-right: 0px;
        }
